<h3>Current Food Trucks and Websites:</h3>
<table>
  <thead>
    <th>ID</th>
    <th>Website</th>
  </thead>
  <tbody>
    {{#each truck}}
    <tr>
      <td>{{food_truck_name}}</td>
      <td>{{website_name}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>