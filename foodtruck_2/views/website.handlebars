<br><br><h1>Website</h1>
<form id="addWebsite" action="/website" method="post">
  Food Truck:<br>
  <select class="styledSelect" name="foodtrucks" id="webpageFoodTruck">
    {{#each allTrucks}}
      <option value={{food_truck_id}}>{{food_truck_name}}</option>
    {{/each}}
  </select>
   <br><br>
  Website Link:<br>
  	<input type="text" name="website" required>
   <br><br>
   	<input type="submit" value="Add Website" id="addWebsite">
</form> 
<br><br>
Search for a food truck's Website:<br>
<form id="seachTruck" action='' method=''>
  Food Truck:<br>
  <select class="styledSelect" name="foodtrucks" id="foodtruckID" onchange="searchWebsite(this.value)">
    {{#each truck}}
      <option value={{food_truck_id}}>{{food_truck_name}}</option>
    {{/each}}
  </select><br>
<!--   <input type="button" value="Search" onclick="searchWebsite()"><br> -->
</form>
<div id="link">Loading...</div>
